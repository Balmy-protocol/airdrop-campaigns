{
  "name": "@mean-finance/airdrop-campaigns",
  "version": "0.0.0",
  "description": "Mean Finance's airdrop campaigns smart contracts and scripts",
  "keywords": [
    "ethereum",
    "smart",
    "contracts",
    "mean finance",
    "airdrop",
    "solidity",
    "campaign",
    "marketing",
    "referral"
  ],
  "repository": "git+https://github.com/mean-finance/airdrop-campaigns.git",
  "license": "AGPL-3.0-only",
  "contributors": [
    {
      "name": "0xged",
      "url": "https://github.com/0xged"
    },
    {
      "name": "TheAustrian1998",
      "url": "https://github.com/TheAustrian1998"
    }
  ],
  "files": [
    "solidity/contracts",
    "solidity/interfaces",
    "artifacts/solidity/**/*.json",
    "!artifacts/solidity/**/**/*.dbg.json",
    "typechained",
    "deployments",
    "!deployments/localhost",
    "!.env",
    "!**/.DS_Store"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "compile:test": "hardhat --show-stack-traces --verbose compile",
    "coverage": "hardhat coverage",
    "deploy": "npx hardhat deploy",
    "docs": "solidity-docgen --solc-module solc-0.8",
    "fork:node": "FORK=true hardhat node",
    "fork:script": "FORK=true hardhat run",
    "lint:check": "solhint 'solidity/**/*.sol' && prettier --check './**'",
    "lint:fix": "sort-package-json && prettier --write './**' && solhint --fix 'solidity/**/*.sol'",
    "prepublishOnly": "hardhat clean && hardhat compile && pinst --disable",
    "postpublish": "pinst --enable",
    "release": "standard-version",
    "test": "yarn compile:test && mocha",
    "test:e2e": "yarn test './test/e2e/**/*.spec.ts'",
    "test:gas": "REPORT_GAS=1 npx hardhat test",
    "test:integration": "yarn test './test/integration/**/*.spec.ts'",
    "test:unit": "npx hardhat compile --no-typechain --show-stack-traces && npx hardhat test"
  },
  "lint-staged": {
    "*.{js,css,md,ts,sol}": "prettier --write",
    "*.sol": "solhint --fix 'solidity/**/*.sol'",
    "package.json": "sort-package-json"
  },
  "resolutions": {
    "cli-table3@^0.5.0/colors": "1.4.0",
    "cli-table@^0.3.1/colors": "1.0.3",
    "eth-gas-reporter/colors": "1.4.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "5.0.1",
    "merkletreejs": "0.2.32"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "2.3.5",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.6",
    "@nomicfoundation/hardhat-foundry": "1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^2.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-viem": "^1.0.0",
    "@typechain/hardhat": "6.1.6",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=16.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.4.4",
    "hardhat": "^2.14.0",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "10.2.0",
    "prettier": "2.8.7",
    "solhint-community": "3.5.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "tsconfig-paths": "4.0.0",
    "typechain": "8.3.1",
    "typescript": "~5.0.4",
    "viem": "^1.15.1"
  },
  "main": "index.js",
  "author": "Sam Bugs <sambugs@protonmail.com>"
}
