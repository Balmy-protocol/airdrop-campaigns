{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@artifacts": ["artifacts/*"],
      "@deploy": ["deploy/*"],
      "@deployments": ["deployments/*"],
      "@utils": ["test/utils/index"],
      "@utils/*": ["test/utils/*"],
      "@e2e/*": ["test/e2e/*"],
      "@unit/*": ["test/unit/*"],
    }
  }
}
